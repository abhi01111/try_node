pipeline {
    
    agent any

    stages {

        stage('git checkout') {
            steps {
                withCredentials([String(credentialsId: 'github-repo', variable: 'GIT_URL')
                ]) {
                    git branch: Params.GIT_BRANCH, url: GIT_URL, credentialsId: 'github-creds'
                }
            }
        }

        stage('build image') {
            steps {
                script {
                    env.IMAGE_TAG = "${BUILD_NUMBER}"
                    sh '''
                    echo "building frontend image"
                    docker build -t frontend:${IMAGE_TAG} ./frontend

                    echo "building backend Image"
                    docker build -t backend:${IMAGE_TAG} ./backend
                    '''
                }
            }
        }

        stage('scan image') {
            when {
                expression { return params.RUN_TRIVY }
            }
            steps {
                sh '''
                    echo "scan backend Image"
                    trivy image --severity HIGH,CRITICAL --exit-code 1 backend:${IMAGE_TAG}

                    echo "scan frontend image"
                    trivy image --severity HIGH,CRITICAL --exit-code 1 frontend:${IMAGE_TAG}
                '''
            }
        }

        stage('Save Image') {
            steps {
                sh '''
                    echo "save frontend image"
                    docker save frontend:${IMAGE_TAG} -o frontend_${IMAGE_TAG}.tar

                    echo "save backend Image"
                    docker save backend:${IMAGE_TAG} -o backend_${IMAGE_TAG}.tar
                '''
            }
        }

        stage('share image to remote server') {
            steps {
                withCredentials([
                    sshUserPrivateKey(credentialsId: 'remote-user', keyFileVariable: 'SSH_KEY', usernameVariable: 'SSH_USER'),
                    string(credentialsId: 'REMOTE-IP', variable: 'REMOTE_IP')
                ]) {
                    sh '''
                        echo "share frontend image"
                        scp -i $SSH_KEY frontend_${IMAGE_TAG}.tar $SSH_USER@${REMOTE_IP}:/opt/docker-images/

                        echo "share backend image"
                        scp -i $SSH_KEY backend_${IMAGE_TAG}.tar $SSH_USER@${REMOTE_IP}:/opt/docker-images/
                    '''
                }
            }
        }

        stage('load images on remote server') {
            steps {
                withCredentials([
                    sshUserPrivateKey(credentialsId: 'remote-user', keyFileVariable: 'SSH_KEY', usernameVariable: 'SSH_USER')
                ]) {
                    sh '''
                        ssh -i $SSH_KEY $SSH_USER@${REMOTE_IP} "
                            docker load -i /opt/dock-images/frontend_${IMAGE_TAG}.tar &&
                            docker load -i /opt/docker-images/backend_${IMAGE_TAG}.tar
                        "
                    '''
                }
            }
        }

        stage('manage infrastructure networks and volumes') {
            steps {
                withCredentials([
                    sshUserPrivateKey(credentialsId: 'remote-user', keyFileVariable: 'SSH_KEY', usernameVariable: 'SSH_USER'),
                    string(credentialsId: 'REMOTE-IP', variable: 'REMOTE_IP')
                ]) {
                    sh '''
                        ssh -i $SSH_KEY $SSH_USER@${REMOTE_IP} "
                            echo "checking network"
                            docker network inspect app_net >/dev/null 2>&1 || docker network create app_net

                            echo "checking volumes"
                            docker volume inspect frontend_access_logs >/dev/null 2>&1 || docker volume create frontend_access_logs
                            docker volume inspect frontend_error_logs >/dev/null 2>&1 || docker volume create frontend_error_logs
                            docker volume inspect backend_logs >/dev/null 2>&1 || docker volume create backend_logs
                            docker volume inspect mongo_data >/dev/null 2>&1 || docker volume create mongo_data
                            docker volume inspect mongo_logs >/dev/null 2>&1 || docker volume create mongo_logs
                        "
                    '''
                }
            }
        }

        stage('deploy') {
            steps {
                withCredentials([
                    sshUserPrivateKey(credentialsId: 'remote-user', keyFileVariable: 'SSH_KEY', usernameVariable: 'SSH_USER'),
                    string(credentialsId: 'mongo-host', variable: 'MONGO_HOST'),
                    string(credentialsId: 'mongo-user', variable: 'MONGO_USER'),
                    string(credentialsId: 'mongo-pass', variable: 'MONGO_PASS'),
                    string(credentialsId: 'mongo-db', variable: 'MONGO_DB'),
                    string(credentialsId: 'REMOTE-IP', variable: 'REMOTE_IP')
                ]) {
                    sh '''
                        ssh -i $SSH_KEY $SSH_USER@${REMOTE_IP} "
                            echo "run mongo container"
                            docker run -d -p 27017:27017 --network app_net -v mongo_data:/data/db -v mongo_logs:/var/log/mongodb \
                                -e MONGO_INITDB_ROOT_USER= ${MONGO_USER} -e MONGO_INITDB_ROOT_PASS= ${MONGO_PASS} \
                                -e MONGO_INITDB_DATABASE= ${MONGO_DB} mongo:7 \
                                --logpath /var/log/mongodb/mongod.log --logappend

                            echo "run backend container"
                            docker run -d -p 5003:5003 --network app_net -v backend_logs:/app/logs -e MONGO_HOST=${MONGO_HOST} \
                                -e MONGO_PORT=27017 -e MONGO_USER=${MONGO_USER} -e MONGO_PASS=${MONGO_PASS} -e MONGO_DB=${MONGO_DB} backend:${IMAGE_TAG}

                            echo "run frontend"
                            docker run -d -p 80:80 --network app_net -v frontend_access_logs:/var/log/nginx/access \
                                -v frontend_error_logs:/var/log/nginx/error frontend:${IMAGE_TAG}
                        "
                    '''
                }
            }
        }
    }
    post {
        success {
            emailext(
                to: 'jenkinstest360@gmail.com',
                subject: 'SUCCESS : ${JOB_NAME} build : ${BUILD_NUMBER}'
                body: 'job : ${JOB_NAME} | build : ${BUILD_NUMBER} | SUCCESS | url : ${BUILD_URL}',
                attachLog: true
            )
        }
        failure {
            emailext(
                to: 'jenkinstest360@gmail.com',
                subject: 'FAILED : ${JOB_NAME} build : ${BUILD_NUMBER}'
                body: 'job : ${JOB_NAME} | build : ${BUILD_NUMBER} | FAILED | url : ${BUILD_URL}',
                attachLog: true
            )
        }
    }
}